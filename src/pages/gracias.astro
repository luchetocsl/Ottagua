---
import BaseLayout from "../layouts/BaseLayout.astro";
import ThankYouSteps from "../components/ThankYouSteps.astro";
import EmailExplanation from "../components/EmailExplanation.astro";
import ProfileUpdateForm from "../components/ProfileUpdateForm.astro";

const PLUNK_API_KEY = import.meta.env.PUBLIC_PLUNK_API_KEY;
---

<BaseLayout>
	<div class="text-red flex justify-start items-center flex-col gap-12 max-w-6xl w-full px-4 py-8 mx-auto">
		<div class="text-center max-w-xl w-full">
			<h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-center mb-2 text-red max-w-prose mx-auto">¡Gracias por suscribirte!</h1>
			<p class="text-center mb-4 text-xl text-red">Aprovecha al máximo tu suscripción</p>
		</div>
		
		<EmailExplanation />
		
		<ThankYouSteps />
		
		<ProfileUpdateForm PLUNK_API_KEY={PLUNK_API_KEY} />
	</div>
</BaseLayout>

<!-- All styling now handled by Tailwind classes -->
<style>
	@media screen and (max-width: 768px) {
		.gap-12 {
			gap: 2rem;
		}
		
		.text-4xl {
			font-size: 1.75rem;
		}
	}
</style>
