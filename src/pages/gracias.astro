---
import BaseLayout from "../layouts/BaseLayout.astro";
import ThankYouSteps from "../components/ThankYouSteps.astro";
import EmailExplanation from "../components/EmailExplanation.astro";
import ProfileUpdateForm from "../components/ProfileUpdateForm.astro";

const PLUNK_API_KEY = import.meta.env.PLUNK_API_KEY;
---

<BaseLayout>
	<div
		class='flex flex-col gap-12 justify-start items-center px-4 py-8 mx-auto w-full max-w-6xl text-red'>
		<div class='w-full max-w-xl text-center'>
			<h1
				class='mx-auto mb-2 max-w-prose text-5xl font-bold text-center md:text-6xl lg:text-7xl text-red'>
				¡Gracias por suscribirte!
			</h1>
			<p class='mb-4 text-xl text-center text-red'>
				Aprovecha al máximo tu suscripción
			</p>
		</div>

		<EmailExplanation />

		<ThankYouSteps />

		<ProfileUpdateForm PLUNK_API_KEY={PLUNK_API_KEY} />
	</div>
</BaseLayout>

<!-- All styling now handled by Tailwind classes -->
<style>
	@media screen and (max-width: 768px) {
		.gap-12 {
			gap: 2rem;
		}

		.text-4xl {
			font-size: 1.75rem;
		}
	}
</style>
