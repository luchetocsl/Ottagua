---
const today = new Date();
---

<footer class="bg-red flex flex-col rounded-t-3xl py-6 items-center text-sm text-cream mt-16">
	<div class="max-w-[1240px] w-full px-4 mx-auto">
		<div class="flex flex-col items-center justify-center w-full gap-4 py-2">
			<div class="flex flex-row justify-center gap-8">
				<a href='/#signup' class="text-cream no-underline hover:text-white hover:underline hover:decoration-2 hover:underline-offset-4 transition-colors duration-200">Suscríbete</a>
				<a href='/about/' class="text-cream no-underline hover:text-white hover:underline hover:decoration-2 hover:underline-offset-4 transition-colors duration-200">Sobre Ottagua</a>
				<a href='/help/' class="text-cream no-underline hover:text-white hover:underline hover:decoration-2 hover:underline-offset-4 transition-colors duration-200">Coopera con Ottagua</a>
				<a href='/unsubscribe/' class="text-cream no-underline hover:text-white hover:underline hover:decoration-2 hover:underline-offset-4 transition-colors duration-200">Cancelar suscripción</a>
			</div>
			
			<p>&copy; {today.getFullYear()} Ottagua. All rights reserved.</p>
		</div>
	</div>
</footer>
<!-- All styling now handled by Tailwind classes -->
<style>
	@media screen and (max-width: 600px) {
		footer > div > div {
			@apply flex-col-reverse gap-2 items-center;
		}
	}
</style>
