---
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---

<header>
	<div class='main'>
		<div class='object'>
			<LottieAnimation
				src='/ottagua-logo-motion.json'
				autoplay='visible'
				loop='false'
			/>
		</div>

		<nav></nav>
	</div>
</header>
<style>
	header {
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: var(--cream);
		width: 100vw;
	}

	.object {
		width: 100vw;
		padding: 1.5rem 1rem;
	}
</style>
