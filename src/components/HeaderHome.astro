import Logo from "./../assets/ottagua-logo.svg";
---

<header>
	<div class='main'>
		<!-- <Image src={Logo} alt='Ottagua Logo' class='logo' /> -->
		<object type='image/svg+xml' data='./ottagua-logo-home.svg'>
			<img src='./ottagua-logo-home.svg' />
		</object>
		<nav></nav>
	</div>
