---
interface Props {
	date: Date;
	class?: string;
}

const { date, class: className } = Astro.props;
---

<time
	datetime={date.toISOString()}
	class={className ?? "text-red no-underline"}>
	{
		date.toLocaleDateString("es-MX", {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
