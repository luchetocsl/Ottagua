---
const { title, link, isGreen } = Astro.props;
import "remixicon/fonts/remixicon.css";
---

<a href={link} class:list={["button", { green: isGreen }]}
	>{title} <i class='ri-arrow-right-up-line'></i></a
>

<style>
	.button {
		background-color: var(--cream);
		padding: 1rem 2rem;
		border-radius: 2rem;
		text-decoration: none;
		color: var(--black);
		margin: 1rem 0;
		display: inline-block;
		font-size: 1rem;
		width: fit-content;
	}

	.green {
		background-color: var(--red);
		color: var(--cream);
	}
</style>
